<script is:inline>
  window.addEventListener("scroll", function () {
    const element = document.getElementById("fixedDiv");
    const menu = this.document.getElementById("menu");
    const shouldFix = window.scrollY > 600;

    element.classList.toggle("fixed", shouldFix);
    element.classList.toggle("bottom-0", shouldFix);
    element.classList.toggle("right-0", shouldFix);
    menu.classList.toggle("mt-10", shouldFix);
    element.classList.toggle("flex", !shouldFix);
  });
</script>
