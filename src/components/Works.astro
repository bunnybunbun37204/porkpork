    >
      <div class="text-5xl">EXHIBITION</div>
    </div>
  </div>
</div>

<script is:inline>
  window.addEventListener("scroll", function () {
    var element = document.getElementById("fixedDiv");
    if (window.scrollY > 1342) {
      element.classList.remove("flex");
      element.classList.add("fixed");
      element.classList.add(`bottom-0`);
      element.classList.add("right-0");
    } else {
      element.classList.remove("fixed");
      element.classList.remove("bottom-0");
      element.classList.remove("right-0");
      element.classList.add("flex");
    }
  });
</script>
