---
import { Image } from "astro:assets";
interface Props {
  project_number: string;
  project_name: string;
  project_department: string;
  project_year: string;
  link: string;
  image: ImageMetadata;
}

const {
  project_number,
  project_name,
  project_department,
  project_year,
  image,
  link,
} = Astro.props;
---

<div class="flex flex-col gap-9">
  <div class="flex flex-row gap-4">
    <div class="font-normal text-start text-3xl md:text-5xl"><a href={link}>{project_number}</a></div>
    <div class="flex flex-col">
      <div class="text-3xl md:text-5xl"><a href={link}>{project_name}</a></div>
      <div class="text-3xl md:text-5xl"><a href={link}>{project_department}</a></div>
      <div class="text-3xl md:text-5xl"><a href={link}>{project_year}</a></div>
    </div>
  </div>
  <div class="flex justify-center">
    <a href={link}>
      <Image
        alt="Preawa portfolio"
        src={image}
        width={411}
        height={253}
        class="object-cover cursor-pointer shadow-lg hover:transform-gpu hover:scale-110"
      />
    </a>
  </div>
</div>
