---
import { Image } from "astro:assets";
import pork1 from "../../src/assets/pork1.png";
import pork2 from "../../src/assets/pork2.png";
import { fname, lname } from "../datas/data";
---

<section class="flex flex-row min-w-full mt-10 justify-between">
  <div class="flex flex-col">
    <h1 class="font-semibold">{fname}</h1>
    <h1 class="font-semibold">{lname}</h1>
  </div>
  <div class="flex flex-row gap-10 mt-16">
    <Image
      width={234}
      height={292}
      class="object-cover mt-[145px] max-h-[292px] cursor-pointer"
      src={pork2}
      alt="kanyapat-saetiew1"
      onclick=""
    />
    <Image
      width={234}
      height={292}
      class="object-cover max-h-[292px]"
      src={pork1}
      alt="kanyapat-saetiew2"
    />
  </div>
</section>
