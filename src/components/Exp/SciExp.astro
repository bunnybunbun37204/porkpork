---
import { Image } from "astro:assets";
import locker from "../../assets/locker.png";
import pussadu from "../../assets/pussadu.png";
---

<div class="flex flex-col gap-7">
  <div class="flex flex-col gap-1">
    <div class="text-6xl font-normal">SCI</div>
    <div class="text-xl font-normal">THE STUDENT UNION FACULTY OF SCIENCE</div>
    <p class="font-light">part time ui designer</p>
  </div>
  <Image
    alt="locker image project"
    src={locker}
    width={427}
    height={276}
    class="object-cover cursor-pointer shadow-lg hover:transform-gpu hover:scale-110"
  />
  <Image
    alt="pussadu image project"
    src={pussadu}
    width={427}
    height={276}
    class="object-cover cursor-pointer shadow-lg hover:transform-gpu hover:scale-110"
  />
</div>
